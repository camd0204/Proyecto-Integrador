  <vm name="r1" type="lxc" arch="x86_64">
    
    
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
    
    
    <!--mem>128M</mem-->
    
    
    <if id="2" net="Net1">
      
      
      <ipv4>10.0.1.1/24</ipv4>
      
    
